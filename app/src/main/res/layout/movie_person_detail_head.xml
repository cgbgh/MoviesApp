<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_title"
        tools:src="@drawable/test_pic2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/v_divider_8dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="56dp"
        android:layout_alignBottom="@id/iv_title"
        android:background="@drawable/shape_divider" />

    <TextView
        android:id="@+id/tv_title_cn"
        style="@style/TextStyle"
        tools:text="刺客信条"
        android:layout_below="@id/v_divider_8dp"
        android:layout_marginTop="@dimen/spacing_double"
        android:gravity="center"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_bigger" />

    <TextView
        android:id="@+id/tv_title_en"
        style="@style/TextStyle"
        tools:text="Assassin"
        android:layout_below="@id/tv_title_cn"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textSize="@dimen/text_normal" />

    <com.app.cgb.moviepreview.ui.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/tv_title_cn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-16dp"
        app:boder="@dimen/spacing_mico"
        app:gravity="start"
        tools:src="@drawable/test_pic2"
        app:boderColor="@android:color/white"/>

    <View
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_below="@id/tv_title_en"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_conner_rectangle" />

</RelativeLayout>